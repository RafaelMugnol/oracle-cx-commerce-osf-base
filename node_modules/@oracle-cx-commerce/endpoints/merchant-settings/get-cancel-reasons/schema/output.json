{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/merchant-settings/get-cancel-reasons/output.json",
    "type": "object",
    "title": "Get cancel reasons response",
    "description": "Get cancel reasons response. Response after cancel reasons initializer runs.",
    "properties": {
      "merchantRepository": {
        "type": "object",
        "description": "The merchant Repository",
        "properties": {
          "settings": {
            "type": "object",
            "description": "Merchant settings",
            "properties": {
              "cancelReasons": {
                "type": "object",
                "description": "Cancel reasons",
                "patternProperties": {
                  "^[A-Z][A-Z]$": {
                    "description": "Cancel reasons configured by merchant",
                    "type": "object",
                    "properties": {
                      "displayValue": {
                        "type": "string",
                        "description": "display value of cancel reason"
                      },
                      "key": {
                        "type": "string",
                        "description": "key used to display the cancel reason"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "example": {
      "merchantRepository": {
        "settings": {
          "cancelReasons": [
            {
              "displayValue": "Bad product review",
              "key": "badProductReview"
            },
            {
              "displayValue": "Better competitor price",
              "key": "betterCompetitorPrice"
            },
            {
              "displayValue": "Change of mind",
              "key": "changeOfMind"
            },
            {
              "displayValue": "Item available at discount currently",
              "key": "itemAvailableAtDiscountCurrently"
            },
            {
              "displayValue": "No longer needed",
              "key": "noLongerNeeded"
            },
            {
              "displayValue": "No update on shipment status",
              "key": "noUpdateOnShipmentStatus"
            },
            {
              "displayValue": "Payment not received",
              "key": "paymentNotReceived"
            },
            {
              "displayValue": "Unable to process your order",
              "key": "cannotProcessOrder"
            }
          ]
        }
      }
    }
  }