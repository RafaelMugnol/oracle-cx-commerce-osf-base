{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/init-merchant-settings/getSamlSettings/output.json",
  "type": "object",
  "title": "Get saml settings response",
  "description": "Get saml settings response. Response after saml settings initializer runs.",
  "properties": {
    "merchantRepository": {
      "type": "object",
      "description": "The merchant Repository",
      "properties": {
        "settings": {
          "type": "object",
          "description": "Merchant settings",
          "properties": {
            "samlsettings": {
              "type": "object",
              "description": "saml settings",
              "patternProperties": {
                "^[A-Z][A-Z]$": {
                  "description": "saml settings configured by merchant",
                  "type": "object",
                  "properties": {
                    "spEntityDescriptor": {
                      "type": "string",
                      "description": "<XML Entity Descriptor>"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "example": {
    "merchantRepository": {
      "settings": {
        "samlSettings": {
          "spEntityDescriptor": "<?xml version=\"1.0\" encoding=\"UTF-8\"?></md:EntityDescriptor>"
        }
      }
    }
  }
}