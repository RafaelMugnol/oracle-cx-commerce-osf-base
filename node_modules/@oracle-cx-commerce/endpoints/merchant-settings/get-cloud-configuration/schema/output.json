{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/init-merchant-settings/get-cloud-configuration/output.json",
  "type": "object",
  "title": "Get cloud configuration",
  "description": "Get cloud configuration response. Response after cloud configuration initializer runs.",
  "properties": {
    "merchantRepository": {
      "type": "object",
      "description": "The merchant Repository",
      "properties": {
        "settings": {
          "type": "object",
          "description": "Merchant settings",
          "properties": {
            "cloudConfiguration": {
              "type": "object",
              "description": "cloud configuration",
              "patternProperties": {
                "^[A-Z][A-Z]$": {
                  "description": "cloud configuration",
                  "type": "object",
                  "properties": {
                    "isB2BEnabled": {
                      "type": "boolean",
                      "description": "isB2B enabled on site"
                    },
                    "allowReturnOnPartiallyFulfilledOrder": {
                      "type": "boolean",
                      "description": "flag to allow return on partially fulfilled order"
                    },
                    "visitorService": {
                      "description": "visitor service details",
                      "type": "object",
                      "properties": {
                        "tenantId": {
                          "description": "Tenant id",
                          "type": "string"
                        },
                        "visitorServiceHost": {
                          "description": "Visitor Service Host",
                          "type": "string"
                        },
                        "oracleUnifiedVisitJsUrl": {
                          "description": "Oracle Unified Visit Host Url",
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "example": {
    "merchantRepository": {
      "settings": {
        "cloudConfiguration": {
          "isB2BEnabled": true,
          "allowReturnOnPartiallyFulfilledOrder": false,
          "visitorService": {
            "tenantId": "5dbd2e4a",
            "visitorServiceHost": "//llg00dwr.uk.oracle.com",
            "oracleUnifiedVisitJsUrl": "//llg00dwr.uk.oracle.com/Visit/js/oracleunifiedvisit.js"
          }
        }
      }
    }
  }
}
