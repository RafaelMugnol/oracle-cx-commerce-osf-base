{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/wapi-currency/get-currency/output.json",
  "title": "Get Currency",
  "description": "Return value from getCurrency endpoint.",
  "type": "object",
  "properties": {
    "currencyRepository": {
      "description": "Currency Repository",
      "type": "object",
      "properties": {
        "currencyInfo": {
          "description": "Currency Info",
          "type": "object",
          "properties": {
            "selectedCurrency": {
              "description": "Latest selected currency",
              "type": "object",
              "properties": {
                "currencyCode": {
                  "description": "ISO 4217 alphabetic currency code",
                  "type": "string"
                },
                "currencyType": {
                  "description": "Type of currency. If set to 'loyaltyPoints', indicates currency based on points.",
                  "type": "string"
                },
                "deleted": {
                  "description": "Indicates if a currency of type 'loyaltyPoints' has been deactivated.",
                  "type": "string"
                },
                "displayName": {
                  "description": "Readable name of the currency.",
                  "type": "string"
                },
                "fractionalDigits": {
                  "description": "Number of digits to the right of the decimal point.",
                  "type": "integer"
                },
                "links": {
                  "description": "List of navigation links.",
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "rel": {
                        "description": "The link's relation to the current page of results: next, prev or self.",
                        "type": "string"
                      },
                      "href": {
                        "description": "The URL of the link.",
                        "type": "string"
                      }
                    }
                  }
                },
                "numericCode": {
                  "description": "ISO 4217 numeric currency code.",
                  "type": "string"
                },
                "repositoryId": {
                  "description": "The ID of the currency item, which is typically a locale string.",
                  "type": "string"
                },
                "symbol": {
                  "description": "The currency symbol.",
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "example": {
    "currencyRepository": {
      "currencyInfo": {
        "selectedCurrency": {
          "currencyCode": "GBP",
          "currencyType": null,
          "deleted": false,
          "displayName": "British Pound Sterling",
          "fractionalDigits": 2,
          "links": [
            {
              "rel": "self",
              "href": "http://example.com:8080/ccstore/v1/currencies/en_GB"
            }
          ],
          "numericCode": "826",
          "repositoryId": "en_GB",
          "symbol": "Â£"
        }
      }
    }
  }
}
