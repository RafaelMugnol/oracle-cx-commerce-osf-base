{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/wapi-currency/list-currencies/output.json",
  "title": "List Currencies",
  "description": "Return value from listCurrencies endpoint.",
  "type": "object",
  "properties": {
    "currencyRepository": {
      "description": "Currency Repository",
      "type": "object",
      "properties": {
        "currencyInfo": {
          "description": "Currency Info",
          "type": "object",
          "properties": {
            "currencies": {
              "description": "All available currency descriptions",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "currencyCode": {
                    "description": "ISO 4217 alphabetic currency code",
                    "type": "string"
                  },
                  "currencyType": {
                    "description": "Type of currency. If set to 'loyaltyPoints', indicates currency based on points.",
                    "type": "string"
                  },
                  "deleted": {
                    "description": "Indicates if a currency of type 'loyaltyPoints' has been deactivated.",
                    "type": "string"
                  },
                  "displayName": {
                    "description": "Readable name of the currency.",
                    "type": "string"
                  },
                  "fractionalDigits": {
                    "description": "Number of digits to the right of the decimal point.",
                    "type": "integer"
                  },
                  "numericCode": {
                  "description": "ISO 4217 numeric currency code.",
                    "type": "string"
                  },
                  "repositoryId": {
                    "description": "The ID of the currency item, which is typically a locale string.",
                    "type": "string"
                  },
                  "symbol": {
                    "description": "The currency symbol.",
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "example": {
    "currencyRepository": {
      "currencyInfo": {
        "currencies": [
          {
            "currencyCode": "DZD",
            "currencyType": null,
            "deleted": false,
            "displayName": "Algerian Dinar",
            "fractionalDigits": 2,
            "numericCode": "012",
            "repositoryId": "ar_DZ",
            "symbol": "دج"
          },
          {
            "currencyCode": "ARS",
            "currencyType": null,
            "deleted": false,
            "displayName": "Argentine Peso",
            "fractionalDigits": 2,
            "numericCode": "032",
            "repositoryId": "es_AR",
            "symbol": "$"
          }
        ]
      }
    }
  }
}
