{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/wapi-share-setting/createEmailConfigs/input.json",
  "title": "Create Email Configs",
  "description": "Create Email Configs for a given Share Setting.",
  "type": "object",
  "properties": {
    "shareSettingId": {
      "type": "string",
      "description": "Share setting to associate the email config with"
    },
    "emailConfigs": {
      "description": "Email configurations to be created.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "email": {
            "description": "Email ID of the recipient.",
            "type": "string"
          },
          "editEnabled": {
            "description": "Whether the recipient has edit access for the resource being shared.",
            "type": "boolean"
          }
        }
      }
    }
  },
  "required": ["shareSettingId", "emailConfigs"],
  "example": {
    "shareSettingId": "1",
    "emailConfigs": [
      {
        "email": "newman@example.com",
        "editEnabled": true
      }
    ]
  }
}
