{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/wapi-share-setting/updateShareSetting/output.json",
  "title": "Update Share Setting",
  "description": "This operation is used to update a share setting for a resource.",
  "type": "object",
  "properties": {
    "purchaseListRepository": {
      "type": "object",
      "description": "The purchase list repository",
      "properties": {
        "shareSettings": {
          "type": "object",
          "description": "All share settings",
          "properties": {
            "shareSetting": {
              "type": "object",
              "description": "The share setting",
              "properties": {
                "account": {
                  "description": "Account for in which the sharing should be valid.",
                  "type": "string"
                },
                "defaultEditEnabled": {
                  "description": "Default edit access of the recipients.",
                  "type": "boolean"
                },
                "organizationSharingEnabled": {
                  "description": "Whether resource is shared with all members of the account (if mentioned).",
                  "type": "boolean"
                },
                "sharedResourceType": {
                  "description": "Type of the resource being shared.",
                  "type": "string",
                  "enum": ["purchaseList"]
                },
                "relativeTo": {
                  "description": "ID of the resource being shared.",
                  "type": "string"
                },
                "sharedEmailConfigs": {
                  "description": "Email configurations of the recipients with whom sharing is done using individual email addresses.",
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "id": {
                  "description": "ID of the Share Setting.",
                  "type": "string"
                }
              }
            }
          }
        },
        "emailConfigs": {
          "type": "object",
          "description": "The email configs",
          "properties": {
            "emailConfig": {
              "type": "object",
              "description": "The email config",
              "properties": {
                "email": {
                  "description": "Email ID of the recipient.",
                  "type": "string"
                },
                "editEnabled": {
                  "description": "Whether the recipient has edit access for the resource being shared.",
                  "type": "boolean"
                },
                "id": {
                  "description": "ID of the email config.",
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "error": {
      "type": "object",
      "description": "The error object",
      "properties": {
        "errorCode": {
          "description": "The error code.",
          "type": "string"
        },
        "message": {
          "description": "The error message.",
          "type": "string"
        },
        "status": {
          "description": "The error status.",
          "type": "string"
        }
      }
    }
  },
  "example": {
    "profileRepository": {
      "profiles": {
        "P1": {"lastName": "Grun", "firstName": "Peter", "id": "P1", "email": "peter@example.com"}
      },
      "organizations": {
        "O1": {"name": "US Motor Works - US Division", "id": "O1"}
      }
    },
    "purchaseListRepository": {
      "shareSettings": {
        "S1": {
          "owner": "P1",
          "organizationSharingEnabled": true,
          "relativeTo": "gl320268",
          "sharedEmailConfigs": ["E1"],
          "sharedResourceType": "purchaseList",
          "id": "S1",
          "defaultEditEnabled": false,
          "account": "O1"
        }
      },
      "emailConfigs": {
        "E1": {"editEnabled": true, "id": "E1", "email": "sam@example.com"}
      }
    }
  }
}
