{
  "priceRepository": {
    "type": "object",
    "description": "The Price Repository",
    "patternProperties": {
      "^[a-zA-Z1-9]+$": {
        "type": "object",
        "description": "The Product ID",
        "properties": {
          "skus" : {
            "type": "object",
            "description": "The SKUs dictionary",
            "patternProperties": {
              "^[a-zA-Z1-9]+$": {
                "type": "object",
                "description": "The SKU ID",
                "properties": {
                  "salePrice": {
                    "type": "number",
                    "description": "The SKU's sale price."
                  },
                  "listPrice": {
                    "type": "number",
                    "description": "The SKU's list price."
                  },
                  "skuId": {
                    "type": "string",
                    "description": "The SKU ID."
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
