{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/wapi-session/login/input.json",
  "title": "Login",
  "description": "Login",
  "type": "object",
  "properties": {
    "username": {
      "description": "The username of the user.",
      "type": "string"
    },
    "password": {
      "description": "The password of the profile.",
      "type": "string"
    },
    "grantType": {
      "description": "The grant type, defaults to 'password' if not passed in.",
      "type": "string"
    },
    "samlResponse": {
      "description": "Value received from the SSO identity provider, would be combined with a grantType of saml_credentials and have no username or password in the payload",
      "type": "string"
    }
  },
  "required": [
    "username",
    "password"
  ],
  "example": {
    "username": "sally@example.com",
    "password": "sally1234",
    "grantType": "password"
  }
}
