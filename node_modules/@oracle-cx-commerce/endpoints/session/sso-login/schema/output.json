{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/wapi-session/ssoLogin/output.json",
  "type": "object",
  "title": "AuthnRequest",
  "description": "AuthnRequest data received from OCCS, this data could then be used for a SAML 2.0 Single Sign On (SSO) Form POST to the SSO identity provider",
  "properties": {
    "clientRepository": {
      "type": "object",
      "description": "The Client Repository",
      "properties": {
        "context": {
          "type": "object",
          "description": "The Context Object",
          "properties": {
            "session": {
              "type": "object",
              "description": "The Session Object",
              "properties": {
                "authnRequest": {
                  "type": "string",
                  "description": "The authnRequest token value"
                },
                "authnRequestTarget": {
                  "type": "string",
                  "description": "The url of the SSO identity provider."
                }
              }
            }
          }
        }
      }
    },
    "error": {
      "type": "object",
      "description": "The error object",
      "properties": {
        "errorCode": {
          "description": "The error code.",
          "type": "string"
        },
        "message": {
          "description": "The error message.",
          "type": "string"
        },
        "status": {
          "description": "The error status.",
          "type": "string"
        }
      }
    }
  },
  "example": {
    "clientRepository": {
      "context": {
        "session": {
          "authnRequest": "",
          "authnRequestTarget": "https://ssoidentityprovider.com/saml"
        }
      }
    },
    "error": {
      "errorCode": "1000500",
      "message": "Invalid input",
      "status": "500"
    }
  }
}
