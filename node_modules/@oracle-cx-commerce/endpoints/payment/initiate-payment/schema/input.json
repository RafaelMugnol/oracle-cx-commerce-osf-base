{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/wapi-payment/initiatePayment/input.json",
  "title": "Initiate Payment",
  "description": "Initiate Payment. Used to intiate payment for web checkout, cash payment types.",
  "type": "object",
  "properties": {
    "orderId": {
      "type": "string",
      "description": "The id of the order."
    },
    "profileId": {
      "type": "string",
      "description": "The id of the logged in user.If logged-in, current profile will be considered."
    },
    "uuid": {
      "type": "string",
      "description": "This field is used to validate whether the Anonymous profile placing an order in Store"
    },
    "payments": {
      "description": "Array of payments, contains the payment of type web checkout, cash, generic.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "seqNum": {
            "type": "string",
            "description": "The sequence number of the payment."
          },
          "type": {
            "type": "string",
            "description": "The type of payment. e.g. paypalCheckout,cash,generic"
          },
          "amount": {
            "type": "number",
            "description": "The payment amount."
          },
          "customProperties": {
            "type": "object",
            "description": "Custom object with dynamic properties.",
            "properties": {}
          },
          "billingAddress": {
            "type": "object",
            "description": "The billing address",
            "properties": {
              "firstName": {
                "type": "string",
                "description": "The first name."
              },
              "middleName": {
                "type": "string",
                "description": "The middle name."
              },
              "lastName": {
                "type": "string",
                "description": "The last name."
              },
              "country": {
                "type": "string",
                "description": "The country code. e.g. US"
              },
              "address1": {
                "type": "string",
                "description": "The address first line."
              },
              "address2": {
                "type": "string",
                "description": "The address second line."
              },
              "address3": {
                "type": "string",
                "description": "The address third line."
              },
              "city": {
                "type": "string",
                "description": "The city"
              },
              "prefix": {
                "type": "string",
                "description": "The prefix"
              },
              "suffix": {
                "type": "string",
                "description": "The suffix"
              },
              "postalCode": {
                "type": "string",
                "description": "The postal code."
              },
              "jobTitle": {
                "type": "string",
                "description": "The job title"
              },
              "companyName": {
                "type": "string",
                "description": "The company name"
              },
              "county": {
                "type": "string",
                "description": "The county"
              },
              "phoneNumber": {
                "type": "string",
                "description": "The phone number."
              },
              "state": {
                "type": "string",
                "description": "The state code. e.g. NY"
              },
              "faxNumber": {
                "type": "string",
                "description": "The fax number"
              },
              "alias": {
                "type": "string",
                "description": "Address alias"
              },
              "email": {
                "type": "string",
                "description": "The email."
              }
            },
            "required": [
              "firstName",
              "lastName",
              "address1",
              "city",
              "country",
              "state",
              "postalCode"
            ]
          }
        }
      },
      "required": [
        "type"
      ]
    }
  },
  "required": [
    "payments"
  ],
  "example": {
    "orderId": "o10050",
    "payments": [
      {
        "seqNum": "1",
        "type": "paypalCheckout"
      }
    ]
  }
}
