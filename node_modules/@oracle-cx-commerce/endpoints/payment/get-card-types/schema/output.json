{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/wapi-payment/getCardTypes/output.json",
  "type": "object",
  "title": "Get card types",
  "description": "Get card types. Returns enabled card types for site",
  "properties": {
    "paymentRepository": {
      "type": "object",
      "description": "The payment Repository",
      "properties": {
        "cardTypes": {
          "description": "List of card types",
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z1-9]+$": {
              "type": "object",
              "description": "Details for the card type",
              "properties": {
                "img": {
                  "description": "Detais of image for Card type",
                  "type": "object",
                  "properties": {
                    "path": {
                      "description": "The relative URL for the image.",
                      "type": "string"
                    },
                    "metadata": {
                      "description": "The metadata for image",
                      "type": "object"
                    },
                    "repositoryId": {
                      "description": "The id of the media external image file.",
                      "type": "string"
                    },
                    "name": {
                      "description": "The name of the image file.",
                      "type": "string"
                    },
                    "url": {
                      "description": "The derived URL for the image.",
                      "type": "string"
                    },
                    "tags": {
                      "description": "Tags for card type image",
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "repositoryId": {
                            "description": "Unique id for media tag",
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                },
                "code": {
                  "description": "The payment gateway specific code for the card type.",
                  "type": "string"
                },
                "repositoryId": {
                  "description": "The id of the card type item.",
                  "type": "string"
                },
                "name": {
                  "description": "The internal name for the card type",
                  "type": "string"
                },
                "startDateRequired": {
                  "description": "Whether the the start date of the credit card is required for this card type.",
                  "type": "boolean"
                },
                "length": {
                  "description": "Valid card number length.",
                  "type": "string"
                },
                "type": {
                  "description": "The card type. E.g.: card.",
                  "type": "string"
                },
                "value": {
                  "description": "The value for the card type.",
                  "type": "string"
                },
                "cvvLength": {
                  "description": "Valid cvv length",
                  "type": "number"
                },
                "iin": {
                  "description": "Issuer identification number pattern for the card type",
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "example": {
    "paymentRepository": {
      "cardTypes": {
        "mastercard": {
          "img": {
            "path": "/ccimg/mastercard.png",
            "metadata": {},
            "repositoryId": "imgMastercard",
            "name": "Mastercard",
            "url": "http://bus00ara.us.oracle.com:8080/file/v486318503902086876/ccimg/mastercard.png",
            "tags": []
          },
          "code": "002",
          "repositoryId": "mastercard",
          "name": "Mastercard",
          "startDateRequired": false,
          "length": "16",
          "type": "card",
          "value": "mastercard",
          "cvvLength": 3,
          "iin": "5[1-5]|222[1-9]|22[3-9]|2[3-6]|27[0-1]|2720"
        }
      }
    }
  }
}
