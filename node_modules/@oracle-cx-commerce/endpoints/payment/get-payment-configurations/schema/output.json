{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/wapi-payment/getPaymentConfigurations/output.json",
  "type": "object",
  "title": "Get payment configurations",
  "description": "Returns payment configurations for site",
  "properties": {
    "paymentRepository": {
      "type": "object",
      "description": "The Payment Repository",
      "properties": {
        "paymentConfigurations": {
          "description": "Payment configuration settings",
          "type": "object",
          "properties": {
            "settings": {
              "description": "List containing payment gateways public settings",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "paymentMethods": {
                    "description": "Payment method supported by the gateway.",
                    "type": "string"
                  }
                }
              }
            },
            "paymentMethods": {
              "description": "List of enabled payment methods",
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "example": {
    "paymentRepository": {
      "paymentConfigurations": {
        "settings": [
          {
            "enabledForScheduledOrder": false,
            "enabledForApproval": false,
            "paymentMethods": "card"
          }
        ],
        "paymentMethods": [
          "physicalGiftCard",
          "paypalCheckout",
          "payULatamWebcheckout",
          "generic",
          "card"
        ]
      }
    }
  }
}

