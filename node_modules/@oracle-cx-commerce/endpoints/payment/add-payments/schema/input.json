{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/wapi-payment/addPayments/input.json",
  "title": "Add Payments",
  "description": "Add Payments. Used to authorize payments for order.",
  "type": "object",
  "properties": {
    "orderId": {
      "type": "string",
      "description": "The id of the order to which the payment will be applied"
    },
    "profileId": {
      "type": "string",
      "description": "The id of the logged in user.If logged-in, current profile will be considered."
    },
    "uuid": {
      "type": "string",
      "description": "This field is used to validate whether the Anonymous profile placing an order in Store"
    },
    "payments": {
      "description": "Array of payments to be applied.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "seqNum": {
            "type": "string",
            "description": "The sequence number of the payment."
          },
          "type": {
            "type": "string",
            "description": "The type of payment. e.g. card,physicalGiftCard,invoice,loyaltyPoints"
          },
          "amount": {
            "type": "number",
            "description": "The payment amount."
          },
          "giftCardNumber": {
            "type": "string",
            "description": "The gift card number. Applicable PaymentType: physicalGiftCard, Required"
          },
          "giftCardPin": {
            "type": "string",
            "description": "The gift card pin. Applicable PaymentType: physicalGiftCard"
          },
          "nameOnCard": {
            "type": "string",
            "description": "The name on the card. Applicable PaymentType: card, Required"
          },
          "cardType": {
            "type": "string",
            "description": "The card type. e.g. visa Applicable PaymentType: card, Required"
          },
          "cardNumber": {
            "type": "string",
            "description": "The card number. Applicable PaymentType: card, Required"
          },
          "cardCVV": {
            "type": "string",
            "description": "The card CVV. Applicable PaymentType: card, Required"
          },
          "expiryMonth": {
            "type": "string",
            "description": "The expiry month for the card. Applicable PaymentType: card, Required"
          },
          "expiryYear": {
            "type": "string",
            "description": "The expiry year for the card. Applicable PaymentType: card, Required"
          },
          "saveCard": {
            "type": "boolean",
            "description": "Property that determines whether to save this card or not. Applicable PaymentType: card"
          },
          "setAsDefault": {
            "type": "boolean",
            "description": "Property to set this card as default card. Applicable PaymentType: card"
          },
          "savedCardId": {
            "type": "string",
            "description": "Id of the saved card. Applicable PaymentType: card"
          },
          "nickname": {
            "type": "string",
            "description": "Card nickname. Applicable PaymentType: card"
          },
          "billingAddress": {
            "type": "object",
            "description": "The billing address. Applicable PaymentType: card,invoice. Required field for PaymentType: card",
            "properties": {
              "firstName": {
                "type": "string",
                "description": "The first name."
              },
              "middleName": {
                "type": "string",
                "description": "The middle name."
              },
              "lastName": {
                "type": "string",
                "description": "The last name."
              },
              "country": {
                "type": "string",
                "description": "The country code. e.g. US"
              },
              "address1": {
                "type": "string",
                "description": "The address first line."
              },
              "address2": {
                "type": "string",
                "description": "The address second line."
              },
              "address3": {
                "type": "string",
                "description": "The address third line."
              },
              "city": {
                "type": "string",
                "description": "The city"
              },
              "prefix": {
                "type": "string",
                "description": "The prefix"
              },
              "suffix": {
                "type": "string",
                "description": "The suffix"
              },
              "postalCode": {
                "type": "string",
                "description": "The postal code."
              },
              "jobTitle": {
                "type": "string",
                "description": "The job title"
              },
              "companyName": {
                "type": "string",
                "description": "The company name"
              },
              "county": {
                "type": "string",
                "description": "The county"
              },
              "phoneNumber": {
                "type": "string",
                "description": "The phone number."
              },
              "state": {
                "type": "string",
                "description": "The state code. e.g. NY"
              },
              "faxNumber": {
                "type": "string",
                "description": "The fax number"
              },
              "alias": {
                "type": "string",
                "description": "Address alias"
              },
              "email": {
                "type": "string",
                "description": "The email."
              }
            },
            "required": [
              "firstName",
              "lastName",
              "address1",
              "city",
              "country",
              "state",
              "postalCode"
            ]
          },
          "PONumber": {
            "type": "string",
            "description": "The purchase order number. Applicable PaymentType: invoice"
          },
          "paymentGroupId": {
            "type": "string",
            "description": "The payment group Id."
          },
          "PayerID": {
            "type": "string",
            "description": "The payer id. Applicable PaymentType: paypalCheckout, Required"
          },
          "paymentId": {
            "type": "string",
            "description": "The payment id. Applicable PaymentType: paypalCheckout, Required"
          },
          "token": {
            "type": "string",
            "description": "The token. Applicable PaymentType: paypalCheckout, Required"
          },
          "customProperties": {
            "type": "object",
            "description": "Custom object with dynamic properties.",
            "properties": {}
          }
        }
      },
      "required": [
        "type"
      ]
    }
  },
  "required": [
    "orderId",
    "payments"
  ],
  "example": {
    "orderId": "o60441",
    "payments": [
      {
        "seqNum": "1",
        "nameOnCard": "test",
        "cardType": "visa",
        "cardNumber": "4055011111111111",
        "cardCVV": "123",
        "expiryMonth": "10",
        "expiryYear": "2030",
        "type": "card",
        "amount": "33.19",
        "cardTypeName": "Visa",
        "billingAddress": {
          "lastName": "Dilliard",
          "country": "US",
          "address3": "",
          "address2": "Suffolk",
          "city": "Bohemia",
          "prefix": "",
          "address1": "70 Euclid Ave #722",
          "postalCode": "11716",
          "jobTitle": "",
          "companyName": "National Discount Auto Parts",
          "county": "",
          "suffix": "",
          "firstName": "Leota",
          "phoneNumber": "631-748-6479",
          "faxNumber": "",
          "middleName": "",
          "state": "NY"
        }
      },
      {
        "amount": 39.99,
        "type": "physicalGiftCard",
        "giftCardNumber": "6035718888920014091"
      },
      {
        "amount": 49,
        "type": "loyaltyPoints",
        "customProperties": {
          "programName": "programForYoungster",
          "programId": "prg10001",
          "pointsType": "bluePoints"
        }
      }
    ]
  }
}
