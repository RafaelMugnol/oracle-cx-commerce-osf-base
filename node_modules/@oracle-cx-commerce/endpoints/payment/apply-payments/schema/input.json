{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/wapi-payment/applyPayments/input.json",
  "title": "Apply Payments",
  "description": "Apply Payments. Used to apply payments on an order.",
  "type": "object",
  "properties": {
    "items": {
      "description": "Array of payments to be applied.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "The type of payment.Applicable PaymentType: physicalGiftCard,storeCredit,card,cash,invoice,inStorePayment,generic"
          },
          "amount": {
            "type": "number",
            "description": "The payment amount."
          },
          "currencyCode": {
            "description": "The currency code. Applicable PaymentType: loyaltyPoints, Required",
            "type": "string"
          },
          "giftCardNumber": {
            "type": "string",
            "description": "The gift card number. Applicable PaymentType: physicalGiftCard, Required"
          },
          "giftCardPin": {
            "type": "string",
            "description": "The gift card pin. PaymentType: giftCard"
          },
          "storeCreditNumber": {
            "type": "string",
            "description": "The store credit number. Applicable PaymentType: storeCredit, Required"
          },
          "nameOnCard": {
            "type": "string",
            "description": "The name on the card. Applicable PaymentType: card, Required if not using a savedcard"
          },
          "cardType": {
            "type": "string",
            "description": "The card type. e.g. visa. Applicable PaymentType: card, Required if not using a savedcard"
          },
          "cardNumber": {
            "type": "string",
            "description": "The card number. Applicable PaymentType: card, Required if not using a savedcard"
          },
          "cardCVV": {
            "type": "string",
            "description": "The card CVV. Applicable PaymentType: card, Required"
          },
          "expiryMonth": {
            "type": "string",
            "description": "The expiry month for the card. Applicable PaymentType: card, Required if not using a savedcard"
          },
          "expiryYear": {
            "type": "string",
            "description": "The expiry year for the card. Applicable PaymentType: card, Required if not using a savedcard"
          },
          "saveCard": {
            "type": "boolean",
            "description": "Property that determines whether to save this card or not. Applicable PaymentType: card"
          },
          "savedCardId": {
            "type": "string",
            "description": "Id of the saved card. Applicable PaymentType: card, Required if using a saved card"
          },
          "billingAddress": {
            "type": "object",
            "description": "The billing address",
            "properties": {
              "alias": {
                "description": "The address alias.",
                "type": "string"
              },
              "firstName": {
                "type": "string",
                "description": "The first name."
              },
              "middleName": {
                "type": "string",
                "description": "The middle name."
              },
              "lastName": {
                "type": "string",
                "description": "The last name."
              },
              "country": {
                "type": "string",
                "description": "The country."
              },
              "address1": {
                "type": "string",
                "description": "The address first line."
              },
              "address2": {
                "type": "string",
                "description": "The address second line."
              },
              "address3": {
                "type": "string",
                "description": "The address third line."
              },
              "city": {
                "type": "string",
                "description": "The city"
              },
              "prefix": {
                "type": "string",
                "description": "The prefix"
              },
              "suffix": {
                "type": "string",
                "description": "The suffix"
              },
              "postalCode": {
                "type": "string",
                "description": "The postal code."
              },
              "jobTitle": {
                "type": "string",
                "description": "The job title"
              },
              "companyName": {
                "type": "string",
                "description": "The company name"
              },
              "county": {
                "type": "string",
                "description": "The county"
              },
              "phoneNumber": {
                "type": "string",
                "description": "The phone number."
              },
              "state": {
                "type": "string",
                "description": "The state. e.g. NY"
              },
              "faxNumber": {
                "type": "string",
                "description": "The fax number"
              },
              "email": {
                "type": "string",
                "description": "The email address"
              }
            },
            "required": [
              "firstName",
              "lastName",
              "address1",
              "city",
              "state",
              "country",
              "postalCode"
            ]
          },
          "PONumber": {
            "type": "string",
            "description": "The purchase order number. Applicable PaymentType: invoice"
          },
          "customProperties": {
            "type": "object",
            "description": "Custom object with dynamic properties.",
            "properties": {}
          }
        },
        "required": [
          "type"
        ]
      }
    }
  },
  "required": [
    "items"
  ],
  "example": {
    "items": [
      {
        "amount": 10,
        "type": "physicalGiftCard",
        "giftCardNumber": "12345678",
        "giftCardPin": "3215",
        "billingAddress": {
          "lastName": "k",
