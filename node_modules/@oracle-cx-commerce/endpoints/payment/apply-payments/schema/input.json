        "cardType": "visa",
        "cardNumber": "4055011111111111",
        "cardCVV": "123",
        "expiryMonth": "10",
        "expiryYear": "2030",
        "type": "card",
        "saveCard": true,
        "customProperties": {
          "installmentOptions": "3months"
        },
        "billingAddress": {
          "lastName": "Dilliard",
