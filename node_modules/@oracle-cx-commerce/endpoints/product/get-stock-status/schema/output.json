{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/wapi-product/getStockStatus/output.json",
  "title": "Get Stock Statuses",
  "description": "Get the stock statuses for an array of SKUs or products.",
  "type": "object",
  "properties": {
    "inventoryRepository": {
      "type": "object",
      "description": "The Inventory Repository",
      "properties": {
        "skus": {
          "type": "object",
          "description": "Array of skus",
          "properties": {
            "skuId": {
              "type": "object",
              "description": "SKU Id",
              "properties": {
                "locationId": {
                  "type": "object",
                  "description": "stock status's location id and it is default it it is online stock status",
                  "patternProperties": {
                    "^[a-zA-Z1-9]+$": {
                      "type": "object",
                      "description": "Stock Status",
                      "properties": {
                        "catalogId": {
                          "type": "string",
                          "description": "The catalog ID."
                        },
                        "productId": {
                          "type": "string",
                          "description": "The product ID."
                        },
                        "preOrderableQuantity": {
                          "type": "integer",
                          "description": "The pre-orderable quantity."
                        },
                        "orderableQuantity": {
                          "type": "integer",
                          "description": "The quantity that can be ordered."
                        },
                        "stockStatus": {
                          "type": "string",
                          "description": "The stock status string."
                        },
                        "availabilityDate": {
                          "type": "string",
                          "description": "The availability date."
                        },
                        "backOrderableQuantity": {
                          "type": "integer",
                          "description": "The back-orderable quantity."
                        },
                        "catRefId": {
                          "type": "string",
                          "description": "The SKU ID."
                        },
                        "inStockQuantity": {
                          "type": "integer",
                          "description": "The quantity in stock."
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "error": {
      "type": "object",
      "description": "The error object",
      "properties": {
        "errorCode": {
          "description": "The error code.",
          "type": "string"
        },
        "message": {
          "description": "The error message.",
          "type": "string"
        },
        "status": {
          "description": "The error status.",
          "type": "string"
        }
      }
    }
  },
  "example": {
    "inventoryRepository": {
      "skus": {
        "Sku_27Gxyzi": {
          "default": {
            "catalogId": "blankStoreCatalog",
            "productId": "Product_27Fxyzi",
            "preOrderableQuantity": 0,
            "locationId": null,
            "orderableQuantity": 0,
            "stockStatus": "IN_STOCK",
            "availabilityDate": null,
            "backOrderableQuantity": 0,
            "catRefId": "Sku_27Gxyzi",
            "inStockQuantity": 0
          },
          "NewYork158": {
            "catalogId": "blankStoreCatalog",
            "productId": "Product_27Fxyzi",
            "preOrderableQuantity": 0,
            "locationId": "NewYork158",
            "orderableQuantity": 0,
            "stockStatus": "IN_STOCK",
            "availabilityDate": null,
            "backOrderableQuantity": 0,
            "catRefId": "Sku_27Gxyzi",
            "inStockQuantity": 0
          },
          "NewYork159": {
            "catalogId": "blankStoreCatalog",
            "productId": "Product_27Fxyzi",
            "preOrderableQuantity": 0,
            "locationId": "NewYork159",
            "orderableQuantity": 0,
            "stockStatus": "IN_STOCK",
            "availabilityDate": null,
            "backOrderableQuantity": 0,
            "catRefId": "Sku_27Gxyzi",
            "inStockQuantity": 0
          }
        }
      }
    },
    "error": {
      "errorCode": "1000500",
      "message": "Invalid input",
      "status": "500"
    }
  }
}
