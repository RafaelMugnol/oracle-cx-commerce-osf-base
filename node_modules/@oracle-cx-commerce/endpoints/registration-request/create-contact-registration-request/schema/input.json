{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/wapi-registration-request/createContactRegistrationRequest/input.json",
  "title": "Create Contact Request",
  "description": "Create Contact Request. Request for the new contact registration is created",
  "type": "object",
  "properties": {
    "profile": {
      "description": "profile",
      "type": "object",
      "properties": {
        "firstName": {
          "description": "First name of the profile.",
          "type": "string"
        },
        "lastName": {
          "description": "Last name of the profile.",
          "type": "string"
        },
        "receiveEmail": {
          "description": "The string representation of whether the user wants to recieve email or not, it should be 'yes' or 'no'",
          "type": "string"
        },
        "email": {
          "description": "Email id of profile.",
          "type": "string"
        }
      },
      "required": [
        "firstName",
        "lastName",
        "email"
      ]
    },
    "requesterComments": {
      "description": "Requester comments given at time of creating request.",
      "type": "string"
    },
    "requestedOrganization": {
      "description": "Contact request to be created with Requested Organization.",
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of an Organization.",
          "type": "string"
        },
        "id": {
          "description": "ID of an Organization.",
          "type": "string"
        }
      }
    }
  },
  "required": [
    "profile"
  ],
  "example": {
    "profile": {
      "firstName": "testiing6",
      "lastName": "shopper3",
      "email": "testing6@example.com"
    },
    "requesterComments": "Some comments",
    "requestedOrganization": {
      "name": "National Discount Auto Parts",
      "id" : "or-100001"
    }
  }
}
