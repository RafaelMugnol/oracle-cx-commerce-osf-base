{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/wapi-purchase-list/updatePurchaseList/input.json",
    "title": "Update Purchase List.",
    "description": "This API update properties of a purchase list. Dynamic Properties of purchase list can be added in the the request using the key value pair structure (\"dynamicPropertyKey\":\"dynamicPropertyValue\"). These property values can take the types of boolean, date, float, string, timestamp, enumerated, big string.",
    "type": "object",
    "properties": {
      "purchaseListId": {
        "description":"The ID of the purchase list.",
        "type":"string"
      },
      "accountId":{
        "description":"The ID of the Organization.",
        "type":"string"
      },
      "name":{
        "description":"The name of the purchase list.",
        "type":"string"
      },
      "description":{
        "description":"The description for the purchase list.",
        "type":"string"
      },
      "siteId":{
        "description":"The ID of the site.",
        "type":"string"
      },
      "items":{
        "description":"list of purchase list items",
        "type":"array",
        "items":{
          "type":"object",
          "properties":{
            "productId":{
              "description":"The product id",
              "type":"string"
            },
            "quantityDesired":{
              "description":"The quantity desired for the item",
              "type":"integer"
            },
            "catRefId":{
              "description":"The catalog ref ID ",
              "type":"string"
            }
          },
          "required":[
            "catRefId",
            "quantityDesired",
            "productId"
          ]
        }
      }
    },
    "required": ["purchaseListId"],
    "example": {
      "purchaseListId": "gl100001",
      "name":"Purchase List 1",
      "description":"Purchase List",
      "siteId":"siteUS",
      "accountId":"or-100001",
      "items":[
        {
          "productId":"Product_18Cxi",
          "catRefId":"Sku_18Dxi",
          "quantityDesired":25
        },
        {
          "productId":"Product_5Cx",
          "catRefId":"Sku_5Cxy",
          "quantityDesired":30
        }
      ],
      "dynamicProperty": "dynamicProperty value"
    }
  }
