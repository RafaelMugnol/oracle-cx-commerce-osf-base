          "accountId": "or-100003",
          "name": "Purchase List for b2b",
          "repositoryId": "gl50056",
          "siteId": "siteUS",
          "id": "gl50056",
          "purchaseListItems": {
            "gi20003": {
              "productId": "Product_36Exy",
              "quantityDesired": 12,
