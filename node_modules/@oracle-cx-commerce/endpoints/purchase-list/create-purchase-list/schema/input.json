{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/wapi-purchase-list/createPurchaseList/input.json",
  "title": "Create Purchase List",
  "description": "This API creates a new purchase list for a given site, account and user context. Each purchase list should have a unique name for a given user. Dynamic Properties of purchase list can be added in the the request using the key value pair structure (\"dynamicPropertyKey\":\"dynamicPropertyValue\"). These property values can take the types of boolean, date, float, string, timestamp, enumerated, big string.",
  "type": "object",
  "properties": {
    "accountId": {
      "description": "The ID of the organization.",
      "type": "string"
    },
    "name": {
      "description": "The name of the purchase list.",
      "type": "string"
    },
    "description": {
      "description": "Description for the purchase list.",
      "type": "string"
    },
    "siteId": {
      "description": "The ID of the site.",
      "type": "string"
    },
    "items": {
      "description": "List of purchase list items",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "productId": {
            "description": "The product ID",
            "type": "string"
          },
          "quantityDesired": {
            "description": "The quantity desired for the item",
            "type": "integer"
          },
          "catRefId": {
            "description": "The catalog ref ID ",
            "type": "string"
          }
        },
        "required": [
          "catRefId",
          "quantityDesired",
          "productId"
        ]
      }
    }
  },
  "required": [
    "name"
  ],
  "example": {
    "name": "Purchase List for b2b",
    "description": "Purchase List",
    "siteId": "siteUS",
    "accountId": "or-100003",
    "items": [
      {
        "productId": "Product_36Exy",
        "catRefId": "Sku_36Fxy",
        "quantityDesired": 12
      },
      {
        "productId": "Product_27Fxyzi",
        "catRefId": "Sku_27Gxyzi",
        "quantityDesired": 10
      }
    ]
  }
}
