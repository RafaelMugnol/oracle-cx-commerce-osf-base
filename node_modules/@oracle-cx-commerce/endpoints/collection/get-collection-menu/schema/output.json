{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/wapi-collection/getCollectionMenu/output.json",
  "title": "Get Collection Menu",
  "description": "Following model is returned when the get collection menu operation responds.",
  "type": "object",
  "properties": {
    "catalogRepository": {
      "type": "object",
      "description": "The catalog Repository",
      "properties": {
        "categories": {
          "type": "object",
          "description": "List of categories.",
          "patternProperties": {
            "^[a-zA-Z1-9]+$": {
              "description": "A category, also known as a collection",
              "type": "object",
              "properties": {            
                "route": {
                  "description": "Route of the collection.",
                  "type": "string"
                },                
                "displayName": {
                  "description": "Display Name of the collection.",
                  "type": "string"
                },
                "childCategories": {
                  "description": "Array of collection objects.",
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "route": {
                        "description": "Route of the child collection.",
                        "type": "string"
                      },
                      "displayName": {
                        "description": "Display name of the child collection.",
                        "type": "string"
                      },
                      "id": {
                        "description": "ID of the child collection.",
                        "type": "string"
                      }
                    }
                  }
                },
                "id": {
                  "description": "collection ID.",
                  "type": "string"
                }              
              }
            }
          }
        }
      }
    },
    "clientRepository": {
      "type": "object",
      "description": "The client Repository",
      "properties": {
        "context": {
          "type": "object",
          "description": "The Context Object",
          "properties": {
            "global": {
              "type": "object",
              "description": "The Global Object",
              "properties": {
                "categories": {
                  "type": "array",
                  "description": "List of categories IDs",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "example": {
    "catalogRepository": {
      "categories": {
        "cat50067": {
          "route": "for-him/category/cat50067",
          "displayName": "For Him",
          "childCategories": [
            {
              "id": "cat90042",
              "route": "/under-25/category/cat90042",
              "displayName": "Under $25"
            },
            {
              "id": "cat90040",
              "route": "/under-50/category/cat90040",
              "displayName": "Under $50"
            }
          ],
          "id": "cat50067"
        },
        "cat90042": {
          "route": "under-25/category/cat90042",
          "displayName": "Under $25",
          "id": "cat90042",
          "childCategories": []
        },
        "cat90040": {
          "route": "under-50/category/cat90040",
          "displayName": "Under $50",
          "id": "cat90040",
          "childCategories": []
        }
      }
    },
    "clientRepository": {
      "context": {
        "global": {
          "categories": [
            "cat50057"
          ]
        }
      }
    }
  }
}
