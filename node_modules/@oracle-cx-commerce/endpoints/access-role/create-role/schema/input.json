{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/store-cart/createRole/input.json",
  "title": "Create Roles",
  "description": "Creates Roles. This is used to create new roles.",
  "type": "object",
  "properties": {
    "accessRights": {
      "type": "array",
      "description": "array of accessRights to be applied for the role",
      "items": {
        "type": "object",
        "description": "repositoryId detail of accessRight",
        "properties": {
          "repositoryId": {
            "description": "repositoryId",
            "type": "string"
          }
        }
      }
    },
    "description": {
      "type": "string",
      "description": "description of the role"
    },
    "repositoryId": {
      "type": "string",
      "description": "repositoryId of the role"
    },
    "name": {
      "type": "string",
      "description": "name of the role"
    },
    "type": {
      "type": "string",
      "description": "type is optional but if given, must be 'organizationalRole'"
    },
    "function": {
      "type": "string",
      "description": "function is optional but if given, must be 'custom'. If not given, it is set to custom."
    },
    "relativeTo": {
      "type": "object",
      "description": "relativeTo is optional but if given, must be the same as user's current organization.",
      "properties": {
        "id": {
          "type": "string",
          "description": "current organizationId'"
        }
      }
    }
  },
  "required": ["name"],
  "example": {
    "name": "Custom Organizational Role 1",
    "repositoryId": "customOrganizationalRole1",
    "description": "Custom Organizational Role 1",
    "accessRights": [
      {
        "repositoryId": "customAccessRight"
      }
    ],
    "relativeTo": {
      "id": "or-100001"
    },
    "type": "organizationalRole",
    "function": "custom"
  }
}