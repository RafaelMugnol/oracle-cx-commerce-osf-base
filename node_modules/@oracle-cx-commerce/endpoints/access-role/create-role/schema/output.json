{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/store-cart/createRole/input.json",
  "title": "Create Roles",
  "description": "Creates Roles. This is used to create new roles.",
  "type": "object",
  "properties": {
    "profileRepository": {
      "type": "object",
      "description": "Profile Repository",
      "properties": {
        "roles": {
          "patternProperties": {
            "^[a-zA-Z0-9_.-]+$": {
              "description": "role object. Here object key is roleId",
              "type": "object",
              "properties": {
                "description": {
                  "description": "Role Description",
                  "type": "string"
                },
                "name": {
                  "description": "Role name",
                  "type": "string"
                },
                "repositoryId": {
                  "description": "Repository Id details of role",
                  "type": "string"
                },
                "accessRights": {
                  "description": "list of accessRights provided to role",
                  "type": "array",
                  "items": {
                    "description": "accessRights Id",
                    "type": "string"
                  }
                },
                "id": {
                  "description": "Id for this role.",
                  "type": "string"
                },
                "type": {
                  "description": "Role type",
                  "type": "string"
                },
                "function": {
                  "description": "Function name for organizationRole",
                  "type": "string"
                },
                "relativeTo": {
                  "description": "Related organizationId for organizationRole",
                  "type": "string"
                }
              }
            }
          },
          "description": "List of Roles",
          "type": "object"
        },
        "accessRights": {
          "type": "object",
          "description": "List of accessRights",
          "patternProperties": {
            "^[a-zA-Z0-9_.-]+$": {
              "description": "accessRights object. Here object key is accessRightId",
              "type": "object",
              "properties": {
                "description": {
                  "description": "accessRights Description",
                  "type": "string"
                },
                "name": {
                  "description": "accessRights name",
                  "type": "string"
                },
                "repositoryId": {
                  "description": "Repository Id details of accessRights",
                  "type": "string"
                },
                "type": {
                  "description": "Role type",
                  "type": "string"
                },
                "id": {
                  "description": "id of accessRights",
                  "type": "string"
                },
                "displayName": {
                  "description": "display name for accessRights",
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "error": {
      "type": "object",
      "description": "The error object",
      "properties": {
        "errorCode": {
          "description": "The error code.",
          "type": "string"
        },
        "errorMessage": {
          "description": "The error message.",
          "type": "string"
        },
        "status": {
          "description": "The error status.",
          "type": "string"
        }
      }
    }
  },
  "example": {
    "profileRepository": {
      "roles": {
        "customRole1": {
          "name": "Custom Role 1",
          "repositoryId": "customRole1",
          "id": "customRole1",
          "description": "Custom Role1",
          "type": "organizationalRole",
          "accessRights": [
            "createAccountAddress"
          ],
          "relativeTo": "or-100001",
          "function": "custom"
        }
      },
      "accessRights": {
        "createAccountAddress": {
          "name": "Create Account Address",
          "type": "generic",
          "displayName": "",
          "repositoryId": "createAccountAddress",
          "id": "createAccountAddress",
          "description": ""
        }
      }
    }
  }
}