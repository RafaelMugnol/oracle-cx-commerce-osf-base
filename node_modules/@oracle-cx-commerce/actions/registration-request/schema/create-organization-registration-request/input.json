{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/store-registration-request/createOrganizationRegistrationRequest/input.json",
  "title": "Create Organization Request",
  "description": "Create Organization Request. Request for the new Organization registration is created",
  "type": "object",
  "properties": {
    "profile": {
      "description": "profile",
      "type": "object",
      "properties": {
        "firstName": {
          "description": "First name of the profile.",
          "type": "string"
        },
        "lastName": {
          "description": "Last name of the profile.",
          "type": "string"
        },
        "receiveEmail": {
          "description": "The string representation of whether the user wants to recieve email or not, it should be 'yes' or 'no'",
          "type": "string"
        },
        "email": {
          "description": "Email id of profile.",
          "type": "string"
        }
      },
      "required": [
        "firstName",
        "lastName",
        "email"
      ]
    },
    "name": {
      "description": "The Organization request name.",
      "type": "string"
    },
    "relatedOrganizationName": {
      "description": "Requester organization.",
      "type": "string"
    },
    "requesterComments": {
      "description": "Requester comments given at time of creating request.",
      "type": "string"
    },
    "organization": {
      "description": "Requested Organization information.",
      "type": "object",
      "properties": {
        "customerType": {
          "description": "Customer Type for an Organization. Accepts one of these values [Standard, Preferred, Enterprise, OEM, Distributor, Supplier].",
          "type": "string"
        },
        "taxReferenceNumber": {
          "description": "Tax Reference number for Organization.",
          "type": "string"
        },
        "name": {
          "description": "The Organization request name.",
          "type": "string"
        },
        "description": {
          "description": "Description for Organization.",
          "type": "string"
        },
        "type": {
          "description": "Type for Organization. Accepts one of these values [none, company, division, department, group].",
          "type": "string"
        },
        "vatReferenceNumber": {
          "description": "Vat reference number of an Organization.",
          "type": "string"
        },
        "dunsNumber": {
          "description": "DUNS Number for Organization. Should be 9 digit number.",
          "type": "string"
        },
        "secondaryAddresses": {
          "description": "Secondary Address for the Organization.",
          "type": "object",
          "properties": {
            "address": {
              "description": "Address created for the Organization.",
              "type": "object",
              "properties": {
                "address1": {
                  "description": "The address line 1 of the secondary address.",
                  "type": "string"
                },
                "address2": {
                  "description": "The address line 2 of the secondary address.",
                  "type": "string"
                },
                "city": {
                  "description": "The city of the secondary address.",
                  "type": "string"
                },
                "state": {
                  "description": "The state code of the secondary address.",
                  "type": "string"
                },
                "postalCode": {
                  "description": "The postal Code of the secondary address.",
                  "type": "string"
                },
                "country": {
                  "description": "The country of the secondary address.",
                  "type": "string"
                },
                "phoneNumber": {
                  "description": "The phone Number of the secondary address.",
                  "type": "string"
                },
                "companyName": {
                  "description": "The company name of the secondary address.",
                  "type": "string"
                }
              },
              "required": [
                "firstName",
                "lastName",
                "address1",
                "city",
                "state",
                "country",
                "postalCode"
              ]
            },
            "addressType": {
              "description": "Address type represents nick name of account if present else repository ID of address item.",
              "type": "string"
            }
          }
        }
      },
      "required": [
        "firstName",
        "lastName",
        "email"
      ]
    }
  },
  "required": [
    "profile",
    "name"
  ],
  "example": {
    "profile": {
      "firstName": "Tester",
      "lastName": "shopper",
      "email": "Testershopper@example.com"
    },
    "name": "OracleTesting Organization",
    "relatedOrganizationName": null,
    "requesterComments": "Some comments",
    "organization": {
      "customerType": "Standard",
      "taxReferenceNumber": "TAXUQ12342",
      "name": "OracleTesting Organization",
      "description": "Some description",
      "type": "none",
      "vatReferenceNumber": "Vat122123",
      "dunsNumber": "123456789",
      "uniqueId": "TestIDNumber"
    }
  }
}
