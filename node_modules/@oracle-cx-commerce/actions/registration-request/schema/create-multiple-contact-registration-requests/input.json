{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/store-registration-request/createMultipleContactRegistrationRequests/input.json",
  "title": "Create Multiple Contact Requests",
  "description": "Create Multiple Contact Requests. Request for the multiple contact registration is created",
  "type": "object",
  "properties": {
    "profile": {
      "description": "profile",
      "type": "object",
      "properties": {
        "firstName": {
          "description": "First name of the profile.",
          "type": "string"
        },
        "lastName": {
          "description": "Last name of the profile.",
          "type": "string"
        },
        "receiveEmail": {
          "description": "The string representation of whether the user wants to recieve email or not, it should be 'yes' or 'no'",
          "type": "string"
        },
        "email": {
          "description": "Email id of profile.",
          "type": "string"
        }
      },
      "required": [
        "firstName",
        "lastName",
        "email"
      ]
    },
    "requesterComments": {
      "description": "Requester comments given at time of creating request.",
      "type": "string"
    },
    "requestedOrganizations": {
      "description": "Contact request to be created with Requested Organization.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "description": "The name of an Organization.",
            "type": "string"
          },
          "id": {
            "description": "ID of an Organization.",
            "type": "string"
          }
        }
      }
    }
  },
  "required": [
    "profile"
  ],
  "example": {
    "requestedOrganizations": [
      {
        "name": "National Discount Auto Parts",
        "id": "or-100001"
      },
      {
        "name": "US Motor Works - German Division",
        "id": "or-100006"
      }
    ],
    "profile": {
      "firstName": "multi4",
      "lastName": "user4",
      "email": "multiuser4@example.com"
    },
    "requesterComments": "Some comments"
  }
}
