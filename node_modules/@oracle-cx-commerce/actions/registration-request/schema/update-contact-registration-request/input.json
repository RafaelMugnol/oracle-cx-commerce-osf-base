{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/store-registration-request/updateContactRegistrationRequest/input.json",
  "title": "Update Contact Request",
  "description": "Update Contact Request. This operation is used to update the Contact request information, status for the given id.",
  "type": "object",
  "properties": {
    "contactRequestId": {
      "description": "The ID of the requested Contact Request.",
      "type": "string"
    },
    "expand": {
      "description": "Expand query param : currently used to expand profile and request Info.(Allowed Values: profile - profile static data, profileAll - profile static & dynamic data, requestAll - profileRequest static & dynamic data).",
      "type": "string"
    },
    "profile": {
      "description": "profile",
      "type": "object",
      "properties": {
        "firstName": {
          "description": "First name of the profile.",
          "type": "string"
        },
        "lastName": {
          "description": "Last name of the profile.",
          "type": "string"
        },
        "email": {
          "description": "Email id of profile.",
          "type": "string"
        }
      },
      "required": [
        "firstName",
        "lastName",
        "email"
      ]
    },
    "requesterComments": {
      "description": "Requester comments given at time of creating request.",
      "type": "string"
    },
    "requestedOrganizationId": {
      "description": "Requested Organization id.",
      "type": "string"
    },
    "requestedOrganizationName": {
      "description": "Requested Organization Name.",
      "type": "string"
    },
    "status": {
      "description": "Status of the request.",
      "type": "string"
    }
  },
  "required": ["contactRequestId"],
  "example": {
    "contactRequestId" : "sr200003",
    "profile": {
      "firstName": "shopperupdate",
      "lastName": "testiingupdate",
      "email": "testing2@example.com"
    },
    "requesterComments": "Some comments update",
    "status": "moreInfoNeeded",
    "expand": "requestAll"
  }
}
