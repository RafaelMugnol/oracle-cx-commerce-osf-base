{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/store-profile/saveCardToProfile/input.json",
  "title": "Save new card details",
  "description": "Save new card details for the profile",
  "type": "object",
  "properties": {
    "cardType": {
      "type": "string",
      "description": "Card type. e.g. visa."
    },
    "cardNumber": {
      "type": "string",
      "description": "Card number"
    },
    "cardCVV": {
      "type": "string",
      "description": "Card secret pin."
    },
    "nameOnCard": {
      "type": "string",
      "description": "Name on the card."
    },
    "expiryMonth": {
      "type": "string",
      "description": "Card expiry month."
    },
    "expiryYear": {
      "type": "string",
      "description": "Card expiry year."
    },
    "nickname": {
      "type": "string",
      "description": "The nick name for the card."
    },
    "setAsDefault": {
      "type": "boolean",
      "description": "The flag to determine whether the card needs to be set as default card for the profile."
    },
    "customProperties": {
      "type": "object",
      "description": "Custom object with dynamic properties. This will be passed to the webhook request.",
      "properties": {}
    },
    "billingAddress": {
      "type": "object",
      "description": "The billing address details.",
      "properties": {
        "firstName": {
          "type": "string",
          "description": "First name."
        },
        "middleName": {
          "type": "string",
          "description": "Middle name."
        },
        "lastName": {
          "type": "string",
          "description": "Last name."
        },
        "prefix": {
          "type": "string",
          "description": "Name prefix."
        },
        "suffix": {
          "type": "string",
          "description": "Name suffix."
        },
        "jobTitle": {
          "type": "string",
          "description": "Job title."
        },
        "companyName": {
          "type": "string",
          "description": "Company name."
        },
        "address1": {
          "type": "string",
          "description": "Address line 1."
        },
        "address2": {
          "type": "string",
          "description": "Address line 2."
        },
        "address3": {
          "type": "string",
          "description": "Address line 3."
        },
        "city": {
          "type": "string",
          "description": "City."
        },
        "phoneNumber": {
          "type": "string",
          "description": "Phone number."
        },
        "faxNumber": {
          "type": "string",
          "description": "Fax number."
        },
        "email": {
          "type": "string",
          "description": "Email address."
        },
        "county": {
          "type": "string",
          "description": "County."
        },
        "state": {
          "type": "string",
          "description": "State code."
        },
        "country": {
          "type": "string",
          "description": "Country code."
        },
        "postalCode": {
          "type": "string",
          "description": "Postal code."
        },
        "alias": {
          "type": "string",
          "description": "Address alias."
        }
      },
      "required": [
        "firstName",
        "lastName",
        "address1",
        "city",
        "state",
        "country",
        "postalCode"
      ]
    }
  },
  "required": [
    "cardType",
    "cardNumber",
    "nameOnCard",
    "expiryMonth",
    "expiryYear",
    "billingAddress"
  ],
  "example": {
    "cardType": "visa",
    "cardNumber": "4123567812341111",
    "cardCVV": "123",
    "nameOnCard": "card2",
    "expiryMonth": "03",
    "expiryYear": "2021",
    "nickname": "visa - 1111",
    "setAsDefault": true,
    "customProperties": {
      "prop2": "value2",
      "prop1": "value1"
    },
    "billingAddress": {
      "firstName": "Kim",
      "middleName": "",
      "lastName": "Anderson",
      "prefix": "",
      "suffix": "",
      "jobTitle": "",
      "companyName": "",
      "address1": "21 Cedar Ave",
      "address2": "",
      "address3": "",
      "city": "Syracuse",
      "phoneNumber": "212-555-1977",
      "faxNumber": "",
      "email": "test@example.com",
      "county": "",
      "state": "NY",
      "country": "US",
      "postalCode": "13202",
      "alias": ""
    }
  }
}
