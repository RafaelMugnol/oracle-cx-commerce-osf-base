{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/return/validateReturns/input.json",
  "title": "Validate Returns",
  "description": "validates Return requests. It validates the return items for each request. If items are not given in requests it gets list of items from an order for which return request can be created.",
  "type": "object",
  "properties": {
      "orders": {
        "description": "List of orders for which returns to be validated",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "orderId": {
              "description": "Order ID for which refunds needs to be calculated.",
              "type": "string"
            },
            "returnItems": {
              "description": "List of returnable Items.",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "catRefId": {
                    "description": "The SKU ID",
                    "type": "string"
                  },
                  "productId": {
                    "description": "The Product ID",
                    "type": "string"
                  },
                  "commerceItemId": {
                    "description": "ID of the commerce item.",
                    "type": "string"
                  },
                  "quantityToReturn": {
                    "description": "Quantity to be Returned",
                    "type": "integer"
                  },
                  "returnReason": {
                    "description": "Reason to return an Item",
                    "type": "string"
                  },
                  "shippingGroupId": {
                    "description": "Shipping group ID of the returned item",
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "required": ["orderId"]
      }
    },
    "required": [
      "orders"
    ],
  "example": {
      "orders": [
        {
          "orderId": "o50419"
        },
        {
          "orderId": "o10079"
        },
        {
          "orderId": "o10078"
        },
        {
          "returnItems": [
            {
              "quantityToReturn": 1,
              "commerceItemId": "ci1000058",
              "productId": "prod10013",
              "returnReason": "didNotLike",
              "shippingGroupId": "sg10042",
              "catRefId": "sku10030"
            }
          ],
          "orderId": "o10042"
        }
      ]
    }
  }
