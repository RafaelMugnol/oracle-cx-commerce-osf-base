{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/store-refund/calculateRefund/input.json",
  "title": "Calculate Refund on return items of an order",
  "description": "Calculate the refund for returned items. Optionally takes the x-ccasset-language headers to get translated content in another language. It can also have an optional X-CCOrganization header, which is a JSON field to specify the current organization context of the logged-in user.",
  "type": "object",
  "properties": {
    "returnItems": {
      "description": "List of returnable items.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "commerceItemId": {
            "description": "The ID of the commerce item.",
            "type": "string"
          },
          "quantityToReturn": {
            "description": "The quantity to be returned.",
            "type": "integer"
          },
          "productId": {
            "description": "The product ID.",
            "type": "string"
          },
          "returnReason": {
            "description": "The reason for returning the item.",
            "type": "string"
          },
          "shippingGroupId": {
            "description": "The shipping group ID of the returned item.",
            "type": "string"
          },
          "catRefId": {
            "description": "The SKU ID.",
            "type": "string"
          }
        },
        "required": [
          "quantityToReturn",
          "returnReason",
          "catRefId"
        ]
      }
    },
    "orderId": {
      "description": "The ID of the order for which the refund needs to be calculated.",
      "type": "string"
    }
  },
  "required": [
    "orderId",
    "returnItems",
    "quantityToReturn",
    "productId",
    "returnReason",
    "catRefId"
  ],
  "example": {
      "orderId": "o70411",
      "returnItems": [
        {
          "productId": "camcorder_1",
          "catRefId": "camcordersku_1_2",
          "commerceItemId": "ci7000411",
          "quantityToReturn": 1,
          "returnReason": "defective",
          "shippingGroupId": "sg80411"
        },
        {
          "productId": "camcorder_1",
          "catRefId": "camcordersku_1_3",
          "commerceItemId": "ci7000412",
          "quantityToReturn": 1,
          "returnReason": "didNotLike",
          "shippingGroupId": "sg80411"
        }
      ]
  }
}
