{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/store-cart/applyCouponsToCart/input.json",
  "title": "Apply Coupons",
  "description": "Apply Coupons. Applies coupon to the order if the coupon code is valid",
  "type": "object",
  "properties": {
    "coupons": {
      "type": "array",
      "description": "array of coupon codes to be applied",
      "items": {
        "type": "string",
        "description": "coupon code"
      }
    }
  },
  "required": [],
  "example": {
    "coupons": ["SAVE2ON20", "FREESHIPPING"]
  }
}