{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/store-purchase-list/updatePurchaseListItems/input.json",
    "title": "Update Purchase List Items.",
    "description": "This API is used to update the purchase list items. Basic operations include add, delete, update. add operation is considered as default if nothing is specified in the input payload.",
    "type": "object",
    "properties": {
      "purchaseListId": {
        "description": "The ID of the purchase list.",
        "type": "string"
      },
      "items":{
        "description":"The list of purchase list items",
        "type":"array",
        "items":{
          "type":"object",
          "properties":{
            "productId":{
              "description":"The product id",
              "type":"string"
            },
            "quantityDesired":{
              "description":"The quantity desired for the item",
              "type":"integer"
            },
            "catRefId":{
              "description":"The catalog ref ID ",
              "type":"string"
            },
            "op":{
              "description":"The operation to be performed on purchase list item.This can be one of add/update/delete",
              "type":"string"
            }
          },
          "required":[
            "catRefId",
            "quantityDesired",
            "productId",
            "op"
          ]
        }
      }
    },
    "required": ["purchaseListId"],
    "example": {
      "purchaseListId": "gl100001",
      "items":[
        {
          "productId":"Product_18Cxi",
          "catRefId":"Sku_18Dxi",
          "quantityDesired":25,
          "op":"update"
        },
        {
          "productId":"Product_5Cx",
          "catRefId":"Sku_5Cxy",
          "quantityDesired":30,
          "op":"delete"
        },
        {
          "productId":"Product_5Cx",
          "catRefId":"Sku_5Cxy",
          "quantityDesired":10,
          "op":"add"
        }
      ]
    }
  }
