{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/store-payment/updateAppliedPayments/input.json",
  "title": "Update Applied Payment",
  "description": "Used to update applied payment on an order.",
  "type": "object",
  "properties": {
    "paymentGroupId": {
      "type": "string",
      "description": "The id of the payment group to be updated."
    },
    "amount": {
      "type": "number",
      "description": "The payment amount."
    },
    "nameOnCard": {
      "type": "string",
      "description": "The name on the card. Applicable PaymentType: card"
    },
    "cardType": {
      "type": "string",
      "description": "The card type. e.g. visa. Applicable PaymentType: card"
    },
    "cardNumber": {
      "type": "string",
      "description": "The card number. Applicable PaymentType: card"
    },
    "cardCVV": {
      "type": "string",
      "description": "The card CVV. Applicable PaymentType: card, Required"
    },
    "expiryMonth": {
      "type": "string",
      "description": "The expiry month for the card. Applicable PaymentType: card"
    },
    "expiryYear": {
      "type": "string",
      "description": "The expiry year for the card. Applicable PaymentType: card"
    },
    "saveCard": {
      "type": "boolean",
      "description": "Property that determines whether to save this card or not. Applicable PaymentType: card"
    },
    "billingAddress": {
      "type": "object",
      "description": "The billing address",
      "properties": {
        "alias": {
          "description": "The address alias.",
          "type": "string"
        },
        "firstName": {
          "type": "string",
          "description": "The first name."
        },
        "middleName": {
          "type": "string",
          "description": "The middle name."
        },
        "lastName": {
          "type": "string",
          "description": "The last name."
        },
        "country": {
          "type": "string",
          "description": "The country."
        },
        "address1": {
          "type": "string",
          "description": "The address first line."
        },
        "address2": {
          "type": "string",
          "description": "The address second line."
        },
        "address3": {
          "type": "string",
          "description": "The address third line."
        },
        "city": {
          "type": "string",
          "description": "The city"
        },
        "prefix": {
          "type": "string",
          "description": "The prefix"
        },
        "suffix": {
          "type": "string",
          "description": "The suffix"
        },
        "postalCode": {
          "type": "string",
          "description": "The postal code."
        },
        "jobTitle": {
          "type": "string",
          "description": "The job title"
        },
        "companyName": {
          "type": "string",
          "description": "The company name"
        },
        "county": {
          "type": "string",
          "description": "The county"
        },
        "phoneNumber": {
          "type": "string",
          "description": "The phone number."
        },
        "state": {
          "type": "string",
          "description": "The state. e.g. NY"
        },
        "faxNumber": {
          "type": "string",
          "description": "The fax number"
        }
      }
    },
    "PONumber": {
      "type": "string",
      "description": "The purchase order number. Applicable PaymentType: invoice"
    },
    "customProperties": {
      "type": "object",
      "description": "Custom object with dynamic properties.",
      "properties": {}
    }
  },
  "required": [
    "paymentGroupId"
  ],
  "example": {
    "paymentGroupId": "pg10006",
    "amount": 10,
    "cardNumber": "4111111111111111",
    "cardType": "visa",
    "cardCVV": "123",
    "expiryMonth": "02",
    "expiryYear": "2022",
    "nameOnCard": "test",
    "customProperties": {
      "installmentOptions": "3months"
    },
    "billingAddress": {
      "lastName": "Dilliard",
      "country": "US",
      "city": "Bohemia",
      "address1": "70 Euclid Ave #722",
      "postalCode": "11716",
      "firstName": "Leota",
      "phoneNumber": "631-748-6479",
      "state": "NY"
    }
  }
}
