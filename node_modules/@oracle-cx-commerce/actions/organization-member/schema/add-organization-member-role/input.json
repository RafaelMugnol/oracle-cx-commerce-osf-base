{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "https://cloud.oracle.com/commerce-cloud/storefront/schemas/store-organization-member/addOrganizationMemberRole/input.json",
  "title": "Add Organization Member Role",
  "description": "Add Member Roles. This operation is used to assign organization based or global roles to a user",
  "type": "object",
  "properties": {
    "roles": {
      "type": "array",
      "description": "array of roles to be added to the member",
      "items": {
        "type": "object",
        "description": "repositoryId details",
        "properties": {
          "id": {
            "description": "organizationId details",
            "type": "string"
          }
        },
        "required": ["id"]
      }
    },
    "memberId": {
      "type": "string",
      "description": "memberId whose role has to be updated" 
    }
  },
  "required": ["memberId"],
  "example":{
    "roles": [
      {
        "id": "role-100001"
      },
      {
        "id": "role-100002"
      }
    ],
    "memberId": "bb-123412"
  }
}
